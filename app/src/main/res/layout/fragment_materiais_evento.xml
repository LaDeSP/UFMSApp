<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrayBackground"
    android:orientation="vertical">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_uploads_evento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <ImageView
        android:id="@+id/no_upload_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:contentDescription="@string/txt_content_description_no_upload"
        android:gravity="center"
        android:src="@mipmap/ic_attachment_black_48dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/no_upload_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/drawer_item_color"
        android:textSize="18sp"
        android:visibility="gone"
        tools:text="Nenhum Anexo" />


</FrameLayout>