<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryColor"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/background"
        android:contentDescription="@string/txt_cd_nav_background"
        android:scaleType="centerCrop" />


    <com.pkmmte.view.CircularImageView
        android:id="@+id/image_profile"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="@dimen/drawer_right_margin"
        android:layout_marginStart="@dimen/drawer_left_margin"
        android:layout_marginTop="72dp"
        android:src="@mipmap/ic_account_circle_white_48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/name_user_logged"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/drawer_right_margin"
            android:layout_marginStart="@dimen/drawer_left_margin"
            android:fontFamily="sans-serif-medium"
            android:text="@string/txt2"
            android:textColor="@android:color/white"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/email_user_logged"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/drawer_right_margin"
            android:layout_marginStart="@dimen/drawer_left_margin"
            android:fontFamily="sans-serif-regular"
            android:text="@string/txt3"
            android:textColor="@android:color/white" />

    </LinearLayout>
</FrameLayout>