<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrayBackground"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            app:mcv_arrowColor="@color/accentColor"
            app:mcv_leftArrowMask="@mipmap/ic_arrow_back_white_24dp"
            app:mcv_rightArrowMask="@mipmap/ic_arrow_forward_white_24dp"
            app:mcv_selectionColor="@color/accentColor"
            app:mcv_weekDayLabels="@array/week_days" />


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_calendar_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>