<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout_aluno"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/txt_card_title"
            android:src="@mipmap/ic_person_black_36dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_aluno_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luiz Henrique"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txt_aluno_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="luizhsda@gmail.com"
                android:textColor="@color/colorHighlight"
                android:textSize="15dp" />
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>

