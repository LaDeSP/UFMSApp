<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/disciplina_adapter_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_bg"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/disciplina_small_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/txt_description_disciplina" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_disciplina_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="3"
                android:ellipsize="end"
                android:fontFamily="sans-serif-regular"
                android:maxLines="2"
                android:textColor="@color/adapter_row_title_color"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/disciplina_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:fontFamily="sans-serif-regular"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/adapter_rating_bar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:isIndicator="true"
                    android:max="5"
                    android:numStars="1"
                    android:rating="1" />


            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/txt_disciplina_professor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:fontFamily="sans-serif-regular"
            android:textColor="@color/adapter_row_text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_disciplina_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-regular"
            android:maxLines="2"
            android:textColor="@color/adapter_row_text_color"
            android:textSize="14sp" />


    </LinearLayout>


</LinearLayout>

