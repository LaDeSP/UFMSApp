<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout_atividades"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteTextColor"
    tools:context="ufms.br.com.ufmsapp.fragment.EventosFragment">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_notas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true" />


    <ImageView
        android:id="@+id/atividade_no_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:contentDescription="@string/txt_notas_not_available"
        android:gravity="center"
        android:src="@mipmap/ic_grade_black_48dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_no_atividade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/drawer_item_color"
        android:textSize="18sp"
        android:visibility="gone"
        tools:text="Sem conexÃ£o" />


    <fr.castorflex.android.circularprogressbar.CircularProgressBar
        android:id="@+id/progress_bar_list_atividades"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginBottom="?attr/actionBarSize"
        app:cpb_colors="@array/colors"
        tools:visibility="visible" />
</FrameLayout>
