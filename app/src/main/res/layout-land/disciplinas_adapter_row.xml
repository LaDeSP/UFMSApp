<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_disciplinas_item_layout"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/custom_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/explore_disciplina_icon"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/evento_first_item_content_description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title_disciplina"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:textColor="@color/adapter_row_title_color"
            android:textSize="@dimen/card_eventos_item_title_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_subtitle_disciplina"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:textColor="@color/adapter_row_text_color"
            android:textSize="@dimen/card_eventos_item_title_size" />

        <RatingBar
            android:id="@+id/disciplina_score"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:isIndicator="true"
            android:max="5"
            android:numStars="5" />

        <TextView
            android:id="@+id/go"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/txt_explore_disciplina_ver"
            android:textColor="@color/txt_explore_disciplina_ver_color"
            android:textSize="@dimen/card_eventos_item_title_size"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>